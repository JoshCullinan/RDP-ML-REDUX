<santa xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="santa.xsd">

        <replicates>1</replicates>

        <simulation>

            <genome>
                <length>3822</length>
	            <sequences>
                
                </sequences>   
           </genome>


            <population>
                <populationSize>$populationSize</populationSize>
                <inoculum>all</inoculum>
            </population>

            <populationType>dynamicPopulation</populationType>

            <growthModel>
                <growthRate>1.1</growthRate>
                <carryingPopulation>100000</carryingPopulation>
            </growthModel>  

            <fitnessFunction>                
                <purifyingFitness>                                    
                    <sites>844-847, 3300-3303, 3498-3501</sites>
                    <rank>
                        <order>observed</order>
                        <breakTies>random</breakTies>
                    </rank>
                    <fitness>
                        <lowFitness>0.95</lowFitness>
                        <minimumFitness>0.2</minimumFitness>
                    </fitness>                   
                </purifyingFitness>                                                         
            </fitnessFunction>

            <recombinationHotSpots>
                <recombinationHotSpot>                
                    <feature>genome</feature>
                    <sites>1000,1200</sites>
                    <boostFactor>16</boostFactor>
                </recombinationHotSpot>
            

                <recombinationHotSpot>                
                    <feature>genome</feature>
                    <sites>50,150</sites>
                    <boostFactor>0.2</boostFactor>
                </recombinationHotSpot>
            </recombinationHotSpots>


	        <mutator>
	            <nucleotideMutator>
	                <mutationRate>$mutationRate</mutationRate>                    
                    <!-- 1.0E-4 3E-2 2E-2 -->
	                <transitionBias>2.0</transitionBias>
	            </nucleotideMutator>
	        </mutator>

	        <replicator>
	            <recombinantReplicator>
			<dualInfectionProbability>0.1</dualInfectionProbability>
			<recombinationProbability>$recombinationProbability</recombinationProbability>
		      </recombinantReplicator>
	        </replicator>

            <epoch>
                <name>epoch1</name>
                <generationCount>$generationCount</generationCount>
            </epoch>

           
            <samplingSchedule>      
                
                <!-- Sample genotypes at certain times in FASTA Format -->
                <sampler>
                    <atFrequency>$generationCount</atFrequency>
                    <fileName>$alignmentName</fileName>
                    <alignment>
                        <sampleSize>$sampleSize</sampleSize>
                        <format>FASTA</format>
                        <label>seq_%g_%s</label>
                    </alignment>
                </sampler>   

            </samplingSchedule>

        </simulation>
</santa>
